		<dbConfigFile>hibernate.cfg.xml</dbConfigFile>
		<propertiesfile>dev.properties</propertiesfile>
		<war.frontenddir>development</war.frontenddir>
	</properties>

	<profiles>
		<profile>
			<id>test</id>
